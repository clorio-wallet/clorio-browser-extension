{
  "manifest_version": 3,
  "name": "Clorio Browser Extension",
  "version": "1.0.0",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ]
}
